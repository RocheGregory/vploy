d-i debian-installer/language string {{ server.language }}
d-i debian-installer/country string {{ server.country }}
d-i debian-installer/locale string {{ server.locale }}

# Keyboard selection.
d-i keyboard-configuration/xkb-keymap select {{ server.keyboard }}
d-i keyboard-configuration/toggle select No toggling

### Network configuration
d-i netcfg/choose_interface select auto
d-i netcfg/disable_autoconfig boolean true
d-i netcfg/dhcp_failed note
d-i netcfg/dhcp_options select Configure network manually

d-i netcfg/get_ipaddress string {{ network.template.public.address }}/{{ network.template.public.prefix }}
d-i netcfg/get_gateway string {{ network.template.gateway }}
d-i netcfg/get_nameservers string {{ network.template.dns | regex_replace(',', ' ') }}
d-i netcfg/confirm_static boolean true

d-i netcfg/get_hostname string debian9-base
d-i netcfg/get_domain string {{ network.template.domain }}

### Mirror settings
d-i mirror/country string manual
d-i mirror/http/hostname string ftp.fr.debian.org
d-i mirror/http/directory string /debian
d-i mirror/http/proxy string

### Account setup
d-i passwd/root-login boolean false
d-i passwd/user-fullname string ansible
d-i passwd/user-uid string 900
d-i passwd/username string ansible

### Clock and time zone setup
d-i clock-setup/utc boolean true
d-i time/zone string {{ server.timezone }}
d-i clock-setup/ntp boolean false

### Partitioning
d-i partman-auto/disk string /dev/sda
d-i partman-auto/method string regular

# Clean Warning in case of lvm or raid
d-i partman-lvm/device_remove_lvm boolean true
d-i partman-md/device_remove_md boolean true
d-i partman-lvm/confirm boolean true
d-i partman-lvm/confirm_nooverwrite boolean true

